<van-cell-group>
  <van-field
    value="{{ loginname }}"
    clearable
    placeholder="用户名/手机号"
    bind:change = "changeLoginname"
  />

  <van-field
    value="{{ password }}"
    type="password"
    placeholder="请输入密码"
    border="{{ true }}"
    bind:change = "changePassword"
  />
</van-cell-group>
<button 
disabled="{{ flag }}"
type="warn"
bindtap="login"
>登录</button>
